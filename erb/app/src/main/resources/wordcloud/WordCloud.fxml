<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.WebView?>

<VBox minHeight="300.0" minWidth="300.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox>
         <children>
            <Label text="Word Cloud">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox spacing="20.0">
         <children>
            <VBox>
               <children>
                  <VBox alignment="CENTER_LEFT" VBox.vgrow="ALWAYS">
                     <children>
                        <Label text="Phrase: (Enter Phrase or Word)" />
                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                           <children>
                              <TextField fx:id="inputTextField" />
                              <Button fx:id="shortAddButton" mnemonicParsing="false" onAction="#shortAddButtonAction" text="Add" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER_LEFT" VBox.vgrow="ALWAYS">
                     <children>
                        <Label text="Word: (Enter Paragraph)" />
                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                           <children>
                              <TextArea fx:id="inputTextArea" prefHeight="200.0" prefWidth="200.0" />
                              <Button fx:id="longAddButton" mnemonicParsing="false" onAction="#longAddButtonAction" text="Add" />
                           </children>
                        </HBox>
                        <CheckBox fx:id="excludeCommonCheckBox" mnemonicParsing="false" onAction="#excludeCommonCheckBoxAction" text="Exclude common words" />
                     </children>
                  </VBox>
               </children>
            </VBox>
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
               <children>
                  <HBox>
                     <children>
                        <Button fx:id="mergeButton" mnemonicParsing="false" onAction="#mergeButtonAction" text="Merge" />
                     </children>
                  </HBox>
                  <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="mergeTableColumn" prefWidth="75.0" text="Merge" />
                      <TableColumn fx:id="phraseTableColumn" prefWidth="75.0" text="Phrase" />
                        <TableColumn fx:id="plusTableColumn" prefWidth="75.0" text="+" />
                        <TableColumn fx:id="minusTableColumn" prefWidth="75.0" text="-" />
                        <TableColumn fx:id="countTableColumn" prefWidth="75.0" text="Count" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <HBox alignment="CENTER_RIGHT">
                     <children>
                        <Button fx:id="buildButton" mnemonicParsing="false" onAction="#buildButtonAction" text="Build" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
      <WebView fx:id="wordCloudWebView" minHeight="300.0" minWidth="300.0" VBox.vgrow="ALWAYS" />
      <HBox alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#saveButtonAction" text="Save Word Cloud" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
