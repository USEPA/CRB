<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.WebView?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ScrollPane fitToHeight="true" minHeight="50.0" style="-fx-background-color: transparent;">
         <content>
            <HBox alignment="CENTER">
               <children>
                  <Label fx:id="activityNameLabel" text="Activity Name" wrapText="true">
                     <font>
                        <Font name="System Bold" size="25.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </content>
      </ScrollPane>
      <HBox VBox.vgrow="ALWAYS">
         <children>
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <HBox fx:id="fileOptionsHBox" spacing="10.0">
                     <children>
                        <Button fx:id="openButton" mnemonicParsing="false" onAction="#openButtonAction" text="Open" HBox.hgrow="ALWAYS" />
                        <Button fx:id="printButton" disable="true" mnemonicParsing="false" onAction="#printButtonAction" text="Print" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  <WebView fx:id="webView" minHeight="-1.0" minWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
