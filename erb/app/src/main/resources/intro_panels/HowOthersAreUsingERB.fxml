<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox fx:id="welcomeHBox" alignment="CENTER">
         <children>
            <Label text="Welcome to the Equitable Resilience Builder">
               <font>
                  <Font name="System Bold" size="30.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER">
         <children>
            <Label text="The ERB toolkit guides you through a collaborative process to strengthen your community's" wrapText="true">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Hyperlink onAction="#equitableResilienceHyperlinkClicked" text="equitable resilience">
               <font>
                  <Font size="15.0" />
               </font>
            </Hyperlink>
            <Label text="to disasters and climate change">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <Label text="How others are using ERB">
         <font>
            <Font size="25.0" />
         </font>
      </Label>
      <Label text="Here's how other communities are using ERB:">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
   </children>
</VBox>
