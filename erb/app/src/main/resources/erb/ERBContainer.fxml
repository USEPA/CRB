<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fx:id="erbScrollPane" fitToHeight="true" fitToWidth="true" prefHeight="750.0" prefWidth="1150.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <VBox fx:id="erbVBox">
         <children>
            <HBox fx:id="headerHBox" alignment="CENTER_LEFT" style="-fx-border-color: #D0D0D0;">
               <children>
                  <HBox fx:id="breadCrumbHBox" alignment="CENTER_LEFT" style="-fx-background-color: #E7E7E7;" HBox.hgrow="ALWAYS" />
                  <MenuBar fx:id="menuBar" nodeOrientation="RIGHT_TO_LEFT" style="-fx-background-color: #E7E7E7;">
                    <menus>
                        <Menu fx:id="faqMenu" mnemonicParsing="false" text="FAQ">
                           <graphic>
                              <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                              </ImageView>
                           </graphic>
                           <items>
                              <MenuItem disable="true" mnemonicParsing="false" text="This page is still under development" />
                           </items>
                        </Menu>
                      <Menu fx:id="resourcesMenu" mnemonicParsing="false" text="Resources">
                           <graphic>
                              <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                              </ImageView>
                           </graphic>
                        </Menu>
                        <Menu fx:id="aboutMenu" mnemonicParsing="false" text="About">
                           <graphic>
                              <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                              </ImageView>
                           </graphic>
                        </Menu>
                    </menus>
                  </MenuBar>
               </children>
            </HBox>
            <HBox fx:id="erbAboutHBox">
               <children>
                  <ImageView fx:id="erbMiniImageView" fitHeight="78.0" fitWidth="88.0" pickOnBounds="true" preserveRatio="true">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </ImageView>
                  <VBox fx:id="welcomeVBox" alignment="CENTER_LEFT">
                     <children>
                        <Label fx:id="titleLabel" text="Equitable Resilience Builder">
                           <font>
                              <Font name="System Bold" size="30.0" />
                           </font>
                        </Label>
                        <Label text="Inclusive planning for disasters and climate change">
                           <font>
                              <Font size="20.0" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>
            <VBox fx:id="erbContainer" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </content>
</ScrollPane>
