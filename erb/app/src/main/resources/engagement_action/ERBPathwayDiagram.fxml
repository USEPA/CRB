<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.shape.Polygon?>

<VBox fx:id="diagramVBox" alignment="CENTER_LEFT" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_LEFT">
         <children>
            <VBox fx:id="holderVBox" alignment="CENTER_LEFT">
               <children>
                  <HBox fx:id="centerHBox" alignment="CENTER">
                     <children>
                        <Line fx:id="leftLeadingLine" endX="-50.0" startX="-105.0" />
                        <StackPane>
                           <children>
                              <Circle fx:id="centerCircle" fill="WHITE" onMouseClicked="#centerCircleClicked" radius="15.0" stroke="BLACK" strokeType="INSIDE" />
                              <Label fx:id="centerCircleLabel" onMouseClicked="#centerCircleClicked" />
                           </children>
                        </StackPane>
                        <Line fx:id="rightLeadingLine" endX="-50.0" startX="-105.0" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="5.0" top="5.0" />
               </padding>
            </VBox>
            <VBox fx:id="arrowVBox" alignment="CENTER_LEFT">
               <children>
                  <Polygon onMouseClicked="#arrowClicked" points="26.5, -15.5, 56.0, -15.5, 41.5, -45.5" rotate="90.0" stroke="BLACK" strokeType="INSIDE" />
               </children>
            </VBox>
         </children>
      </HBox>
      <VBox alignment="CENTER_LEFT">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Label fx:id="activityLabel" />
                  <HBox prefWidth="20.0" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets top="2.0" />
         </padding>
      </VBox>
   </children>
</VBox>
