<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox fx:id="erbHeading" alignment="CENTER">
         <children>
            <Label minWidth="250.0" text="Chapter Planning">
               <font>
                  <Font name="System Bold" size="25.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox>
         <children>
            <Label minWidth="570.0" text="Use this screen to plan out interactions with stakeholders and other interested parties. ">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <VBox VBox.vgrow="ALWAYS">
         <children>
            <HBox>
               <children>
                  <Label minWidth="140.0" text="Who is my audience?">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <TextArea fx:id="audienceTextArea" />
         </children>
      </VBox>
      <VBox>
         <children>
            <HBox>
               <children>
                  <Label minWidth="130.0" text="What are my goals?">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <TextArea fx:id="goalsTextArea" />
         </children>
      </VBox>
      <VBox>
         <children>
            <HBox>
               <children>
                  <Label minWidth="200.0" text="What activities will I be doing?">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <TextArea fx:id="activitiesTextArea" />
         </children>
      </VBox>
      <VBox>
         <children>
            <HBox>
               <children>
                  <Label minWidth="137.0" text="Miscellaneous Notes">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <TextArea fx:id="notesTextArea" />
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
