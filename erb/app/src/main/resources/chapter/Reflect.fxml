<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<ScrollPane fx:id="reflectScrollPane" fitToHeight="true" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <VBox fx:id="reflectVBox">
         <children>
            <HBox fx:id="erbHeading" alignment="CENTER">
               <children>
                  <Label text="Chapter Reflection">
                     <font>
                        <Font name="System Bold" size="25.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <VBox spacing="5.0" VBox.vgrow="ALWAYS">
               <children>
                  <HBox spacing="25.0" VBox.vgrow="ALWAYS">
                     <children>
                        <VBox alignment="TOP_CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <HBox alignment="CENTER" spacing="3.0">
                                 <children>
                                    <Label text="Chapter Percent Complete" wrapText="true" HBox.hgrow="ALWAYS">
                                       <font>
                                          <Font name="System Bold" size="15.0" />
                                       </font>
                                    </Label>
                                    <StackPane>
                                       <children>
                                          <Circle fill="WHITE" radius="8.0" stroke="BLACK" strokeType="INSIDE" style="-fx-fill: #E7E7E7;" />
                                          <Label fx:id="chapterCompletionInfoLabel" text="?">
                                             <font>
                                                <Font size="10.0" />
                                             </font>
                                          </Label>
                                       </children>
                                    </StackPane>
                                 </children>
                              </HBox>
                              <VBox alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
                                 <children>
                                    <VBox fx:id="chapterProgressVBox" alignment="BOTTOM_CENTER" maxWidth="35.0" style="-fx-border-color: black; -fx-border-radius: 2 2 2 2;" VBox.vgrow="ALWAYS">
                                       <children>
                                          <VBox fx:id="chapterProgressBar" style="-fx-border-radius: 2 2 2 2;" />
                                       </children>
                                       <padding>
                                          <Insets bottom="0.5" left="0.5" right="0.5" top="0.5" />
                                       </padding>
                                    </VBox>
                                 </children>
                              </VBox>
                              <Label fx:id="chapterPercentLabel" text="\%">
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                        <VBox minWidth="80.0" spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <HBox alignment="CENTER" spacing="3.0">
                                 <children>
                                    <Label text="Completed" HBox.hgrow="ALWAYS">
                                       <font>
                                          <Font name="System Bold" size="15.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </HBox>
                              <VBox fx:id="statusVBox" alignment="TOP_CENTER" spacing="46.0" VBox.vgrow="ALWAYS" />
                           </children>
                        </VBox>
                        <VBox minWidth="60.0" spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <HBox alignment="CENTER" spacing="3.0">
                                 <children>
                                    <Label text="Activity" HBox.hgrow="ALWAYS">
                                       <font>
                                          <Font name="System Bold" size="15.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </HBox>
                              <VBox fx:id="activityVBox" spacing="41.0" VBox.vgrow="ALWAYS" />
                           </children>
                        </VBox>
                        <VBox minWidth="50.0" spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <HBox alignment="CENTER" spacing="3.0">
                                 <children>
                                    <Label text="Notes" HBox.hgrow="ALWAYS">
                                       <font>
                                          <Font name="System Bold" size="15.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </HBox>
                              <VBox fx:id="notesVBox" alignment="TOP_CENTER" spacing="35.0" VBox.vgrow="ALWAYS" />
                           </children>
                        </VBox>
                        <VBox minWidth="225.0" spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <HBox alignment="CENTER" spacing="3.0">
                                 <children>
                                    <Label text="Ranking" HBox.hgrow="ALWAYS">
                                       <font>
                                          <Font name="System Bold" size="15.0" />
                                       </font>
                                    </Label>
                                    <StackPane>
                                       <children>
                                          <Circle fill="WHITE" radius="8.0" stroke="BLACK" strokeType="INSIDE" style="-fx-fill: #E7E7E7;" />
                                          <Label fx:id="confidenceInfoLabel" text="?">
                                             <font>
                                                <Font size="10.0" />
                                             </font>
                                          </Label>
                                       </children>
                                    </StackPane>
                                 </children>
                              </HBox>
                              <VBox fx:id="ratingVBox" alignment="TOP_CENTER" spacing="25.0" VBox.vgrow="ALWAYS">
                                 <padding>
                                    <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                                 </padding>
                              </VBox>
                           </children>
                        </VBox>
                        <VBox alignment="TOP_CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <HBox alignment="CENTER" spacing="3.0">
                                 <children>
                                    <Label text="Chapter Ranking" wrapText="true" HBox.hgrow="ALWAYS">
                                       <font>
                                          <Font name="System Bold" size="15.0" />
                                       </font>
                                    </Label>
                                    <StackPane>
                                       <children>
                                          <Circle fill="WHITE" radius="8.0" stroke="BLACK" strokeType="INSIDE" style="-fx-fill: #E7E7E7;" />
                                          <Label fx:id="chapterConfidenceInfoLabel" text="?">
                                             <font>
                                                <Font size="10.0" />
                                             </font>
                                          </Label>
                                       </children>
                                    </StackPane>
                                 </children>
                              </HBox>
                              <VBox alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
                                 <children>
                                    <VBox fx:id="confidenceRatingVBox" alignment="BOTTOM_CENTER" maxWidth="35.0" style="-fx-border-color: black;" VBox.vgrow="ALWAYS">
                                       <children>
                                          <VBox fx:id="confidenceRatingBar" />
                                       </children>
                                       <padding>
                                          <Insets bottom="0.5" left="0.5" right="0.5" top="0.5" />
                                       </padding>
                                    </VBox>
                                 </children>
                              </VBox>
                              <Label fx:id="confidencePercentLabel" text="\%">
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER">
                     <children>
                        <Hyperlink onAction="#addChapterNotesAction" text="Chapter Notes">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </Hyperlink>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="3.0">
                           <children>
                              <Label text="Goal  Percent Complete">
                                 <font>
                                    <Font name="System Bold" size="15.0" />
                                 </font>
                              </Label>
                              <StackPane>
                                 <children>
                                    <Circle fill="WHITE" radius="8.0" stroke="BLACK" strokeType="INSIDE" style="-fx-fill: #E7E7E7;" />
                                    <Label fx:id="goalCompletionInfoLabel" text="?">
                                       <font>
                                          <Font size="10.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </StackPane>
                           </children>
                        </HBox>
                        <ProgressBar fx:id="goalProgressBar" prefHeight="30.0" prefWidth="350.0" progress="0.0" />
                        <Label fx:id="goalProgressLabel" text="\%">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </content>
</ScrollPane>
