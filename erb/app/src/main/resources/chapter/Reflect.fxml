<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <VBox prefHeight="599.0" prefWidth="905.0" spacing="10.0">
         <children>
            <HBox fx:id="erbHeading" alignment="CENTER">
               <children>
                  <Label text="ERB Chapter Reflection">
                     <font>
                        <Font name="System Bold" size="25.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <VBox spacing="5.0" VBox.vgrow="ALWAYS">
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0" spacing="15.0" VBox.vgrow="ALWAYS">
                     <children>
                        <VBox alignment="TOP_CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Chapter Progress" wrapText="true">
                                 <font>
                                    <Font name="System Bold" size="15.0" />
                                 </font>
                              </Label>
                              <VBox alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
                                 <children>
                                    <VBox fx:id="chapterProgressVBox" alignment="BOTTOM_CENTER" maxWidth="35.0" style="-fx-border-color: black; -fx-border-radius: 2 2 2 2;" VBox.vgrow="ALWAYS">
                                       <children>
                                          <VBox fx:id="chapterProgressBar" style="-fx-border-radius: 2 2 2 2;" />
                                       </children>
                                       <padding>
                                          <Insets bottom="0.5" left="0.5" right="0.5" top="0.5" />
                                       </padding>
                                    </VBox>
                                 </children>
                              </VBox>
                              <Label fx:id="chapterPercentLabel" text="\%">
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                        <VBox minWidth="45.0" spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label minWidth="0.0" text="Completed">
                                 <font>
                                    <Font name="System Bold" size="15.0" />
                                 </font>
                              </Label>
                              <VBox fx:id="statusVBox" spacing="20.0" VBox.vgrow="ALWAYS" />
                           </children>
                        </VBox>
                        <VBox minWidth="55.0" spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Activity">
                                 <font>
                                    <Font name="System Bold" size="15.0" />
                                 </font>
                              </Label>
                              <VBox fx:id="activityVBox" spacing="15.0" VBox.vgrow="ALWAYS" />
                           </children>
                        </VBox>
                        <VBox minWidth="45.0" spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Notes">
                                 <font>
                                    <Font name="System Bold" size="15.0" />
                                 </font>
                              </Label>
                              <VBox fx:id="notesVBox" spacing="12.0" VBox.vgrow="ALWAYS" />
                           </children>
                        </VBox>
                        <VBox minWidth="50.0" spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Rating">
                                 <font>
                                    <Font name="System Bold" size="15.0" />
                                 </font>
                              </Label>
                              <VBox fx:id="ratingVBox" spacing="25.0" VBox.vgrow="ALWAYS" />
                           </children>
                        </VBox>
                        <VBox minWidth="30.0" spacing="5.0">
                           <children>
                              <Label text="\%">
                                 <font>
                                    <Font name="System Bold" size="15.0" />
                                 </font>
                              </Label>
                              <VBox fx:id="percentVBox" spacing="18.0" VBox.vgrow="ALWAYS" />
                           </children>
                        </VBox>
                        <VBox alignment="TOP_CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Chapter Confidence Rating" wrapText="true">
                                 <font>
                                    <Font name="System Bold" size="15.0" />
                                 </font>
                              </Label>
                              <VBox alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
                                 <children>
                                    <VBox fx:id="confidenceRatingVBox" alignment="BOTTOM_CENTER" maxWidth="35.0" style="-fx-border-color: black;" VBox.vgrow="ALWAYS">
                                       <children>
                                          <VBox fx:id="confidenceRatingBar" />
                                       </children>
                                       <padding>
                                          <Insets bottom="0.5" left="0.5" right="0.5" top="0.5" />
                                       </padding>
                                    </VBox>
                                 </children>
                              </VBox>
                              <Label fx:id="confidencePercentLabel" text="\%">
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER">
                     <children>
                        <Hyperlink onAction="#addChapterNotesAction" text="Chapter Notes">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </Hyperlink>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <Label text="Goal Progress">
                           <font>
                              <Font name="System Bold" size="15.0" />
                           </font>
                        </Label>
                        <ProgressBar fx:id="goalProgressBar" prefHeight="30.0" prefWidth="350.0" progress="0.0" />
                        <Label fx:id="goalProgressLabel" text="\%">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </content>
</ScrollPane>
